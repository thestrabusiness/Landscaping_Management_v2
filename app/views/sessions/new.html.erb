<%= render 'shared/flashes' %>
<div class='form-page'>
  <%= render 'shared/form_header', title: 'Login' %>
  <%= simple_form_for :session, url: session_path do |form| %>
    <%= form.input :email %>
    <%= form.input :password %>
    <%= form.button :submit, "Sign in" %>
  <% end %>

  <div class='sign-up-link'>
    Don't have an account?
    <%= link_to 'Click here', new_user_path %>
    to sign up.
  </div>
</div>
