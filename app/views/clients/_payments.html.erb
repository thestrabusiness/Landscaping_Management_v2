<div class='client-detail-section payments hidden'>
  <div class='client-detail-header'>
    <div class='client-detail-title'>
      <span>Payment History</span>
    </div>
    <div class='client-detail-search'>
      <%= text_field_tag(:search, 'Search') %>
    </div>
    <hr class='section-break'>
    <div class='client-detail payment-count'>
      <div class='label'>
        Number of Payments
      </div>
      <span>
        <%= @client.payments.count %>
      </span>
    </div>
    <div class='client-detail balance'>
      <div class='label'>
        Balance
      </div>
      <span>
        <%= @client.balance %>
      </span>
    </div>
  </div>
  <div class='client-detail-list'>
    <div class='full-size-list payments'>
      <div class='list-title'>
        Payments
      </div>
      <div class='details-list'>
        <%= render @payments.present? ? 'payments_table' : 'no_records_message',
                   klass: 'payment', payments: @payments %>
      </div>
    </div>
  </div>
</div>
