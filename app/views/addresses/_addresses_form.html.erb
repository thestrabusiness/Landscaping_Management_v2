<%= simple_form_for [@client, @address] do |f| %>
    <%= f.input :street %>
    <%= f.input :city %>
    <%= f.input :state %>
    <%= f.input :zip %>
    <%= f.input :is_job_address?, label: 'Do you perform work at this address?' %>
    <%= f.input :position, label: 'Job Order'  %>
    <%= f.button :submit%>
<% end %>
