<div class='form-container'>
  <%= simple_form_for @payment do |f| %>
    <%= f.input :date_received, as: :date%>
    
    <%= f.input :client,
                as: :string,
                input_html: {
                    value: @payment.client&.summary,
                    data: { autocomplete_source: Client.autocomplete_source }
                } %>
    <%= f.hidden_field :client_id %>

    <%= f.input :invoice,
                as: :string,
                input_html: {
                    value: @payment.invoice&.summary,
                    data: { autocomplete_source: Invoice.autocomplete_source }
                } %>
    <%= f.hidden_field :invoice_id %>

    <%= f.input :amount, as: :decimal %>

    <%= f.input :payment_type %>

    <%= f.button :submit %>
  <% end %>
</div>
